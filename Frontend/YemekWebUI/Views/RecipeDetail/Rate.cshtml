@model CreateRateDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tarif Puanlama</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .star-rating {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
        }

            .star-rating .star {
                font-size: 2rem;
                color: #d3d3d3;
                cursor: pointer;
            }

                .star-rating .star.selected {
                    color: #ffc107;
                }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Tarif Puanlama</h4>
            </div>
            <div class="card-body">
                <!-- Tarif ve Kullanıcı Bilgileri -->
                <div class="mb-4">
                    <h5>Tarif ID: @ViewBag.recipeId</h5>
                    <p>Kullanıcı ID: @ViewBag.userId</p>
                </div>

                <!-- Puanlama Formu -->
                <form method="post" action="/RecipeDetail/Rate">
                    <input type="hidden" name="RecipeId" value="@ViewBag.recipeId">
                    <input type="hidden" name="UserId" value="@ViewBag.userId">

                    <!-- Puanlama Yıldızları -->
                    <div class="mb-4">
                        <label for="Rate" class="form-label">Puan:</label>
                        <div class="star-rating" id="starRating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span class="star" data-value="@i">&#9733;</span>
                            }
                        </div>
                        <input type="hidden" id="Rate" name="Score" value="0">
                    </div>

                  

                    <!-- Gönder Butonu -->
                    <div class="text-end">
                        <button type="submit" class="btn btn-success">Gönder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap ve jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Yıldız Puanlama İşlevi
            $('.star-rating .star').on('click', function () {
                var rating = $(this).data('value');
                $('#Rate').val(rating);

                // Yıldızları güncelle
                $('.star-rating .star').removeClass('selected');
                $(this).prevAll().addBack().addClass('selected');
            });
        });
    </script>
</body>
</html>
