@model ResultRecipeByIdDto
<div class="recepie_details_area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-md-6">
                <div class="recepies_thumb">
                    <img src="@Model.RecipeImageUrl" alt="">
                </div>
            </div>
            <div class="col-xl-6 col-md-6">
                <div class="recepies_info">
                    <h3>@Model.Title</h3>
                    <div class="resepies_details">
                        <ul>
                            <li><p><strong>Rating</strong> : <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i> </p></li>
                            <li><p><strong>Category</strong> : @Model.CategoryName </p></li>
                            <li>
                                <p>
                                    <strong>Malzemeler</strong> :
                                    <ul>
                                        @foreach (var material in Model.Materials)
                                        {
                                            <li>@material</li>
                                        }
                                    </ul>
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="recepies_text">
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
        <!-- Puanlama Butonu -->
        <div class="row mt-4">
            <div class="col-xl-12 text-center">
                <a href="@Url.Action("Rate", "RecipeDetail", new { recipeId = ViewBag.recipeId })" class="btn btn-primary">
                    Tarif Puanla
                </a>
            </div>
        </div>
    </div>
</div>
