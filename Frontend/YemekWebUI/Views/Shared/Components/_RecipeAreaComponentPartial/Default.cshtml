@model List<RecipeAreaDto>

<div class="recepie_area">


    <div class="container">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="single_recepie text-center">
                        <div class="KendimAyarladim">
                            <img src="@item.RecipeImageUrl" alt="">
                        </div>
                        <h3>@item.Title</h3>
                        <p>
                            @(
                                item.Description.Length > 50
                                ? item.Description.Substring(0, 50) + "..."
                                : item.Description
                                )
                        </p>
                        <a href="#" class="line_btn">Tarifin tam halini gör</a>
                    </div>
                </div>
            }
        </div>

    </div>

</div>



