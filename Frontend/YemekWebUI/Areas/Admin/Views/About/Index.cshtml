@model List<ResultAboutForAdminDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}



<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Hakkımızda</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatables"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>AboutId</th>
                                <th>Description</th>
                                
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>AboutId</th>
                                <th>Description</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.AboutId</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <button class="btn btn-danger delete-button" data-url="/Admin/About/RemoveAbout/@item.AboutId">
                                            Sil
                                        </button>
                                        <button class="btn btn-warning update-button" data-url="/Admin/About/UpdateAbout/@item.AboutId">
                                            Güncelle
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>